<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <AnalysisLevel>latest</AnalysisLevel>
    <AssemblyVersion>1.0.0.2</AssemblyVersion>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Config.Net" Version="5.1.5" />
    <PackageReference Include="FluentValidation" Version="11.8.1" />
    <PackageReference Include="FluentValidation.DependencyInjectionExtensions" Version="11.8.1" />
    <PackageReference Include="Microsoft.CodeCoverage" Version="17.8.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="8.0.0" />
    <PackageReference Include="VNet.System" Version="1.0.0" />
    <PackageReference Include="VNet.Testing" Version="1.0.1" />
    <PackageReference Include="VNet.Utility" Version="1.0.1" />
    <PackageReference Include="VNet.Validation" Version="1.0.0" />
  </ItemGroup>
  <Target Name="CopyToSharedLibraries" AfterTargets="AfterBuild">
    <Copy SourceFiles="$(OutputPath)\VNet.CommandLine.dll" DestinationFolder="D:\My Code\Shared Libraries\" ContinueOnError="true" />
  </Target>
  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="xcopy /e /y &quot;$(TargetPath)&quot; &quot;D:\My Code\VNet bin\&quot;" />
  </Target>
</Project>